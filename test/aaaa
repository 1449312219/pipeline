apiVersion: tekton.dev/v1beta1
kind: TaskRun
metadata:
  name: git-tag
spec:
  workspaces:
  - name: known_hosts
    configmap:
      name: pipeline-known-hosts
      defaultMode: 0644
    subPath: known-hosts
  - name: git-key
    secret:
      name: pipeline-git-ssh-key
      items:
      - key: id_rsa
        mode: 0600
      - key: id_rsa.pub
        mode: 0644

  params:
  - name: tag
    value: ttttttttt
  - name: msg
    value: ttttttttttttttttttttttttttttttttttt

  taskRef:
    name: git-tag
